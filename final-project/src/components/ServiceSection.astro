---
import { Image } from "astro:assets";
import ServiceImage from "./ServiceImage.astro";
import Carousel from "./ServiceCarousel";

const firstRowLogos = [
  { id: 1, alt: "KIA moters" },
  { id: 2, alt: "bmw" },
  { id: 3, alt: "melcedes" },
  { id: 4, alt: "hyundai" },
  { id: 5, alt: "honda" },
  { id: 6, alt: "aqua" },
  { id: 7, alt: "racing" },
];

const secondRowLogos = [
  { id: 4, alt: "hyundai" },
  { id: 1, alt: "KIA moters" },
  { id: 3, alt: "melcedes" },
  { id: 7, alt: "racing" },
];

const firstRowServices = [
  { id: 1, title: "Engine services" },
  { id: 2, title: "Air conditioning" },
  { id: 3, title: "Engine services" },
];

const secondRowServices = [
  { id: 2, title: "Engine management" },
  { id: 4, title: "Steering" },
  { id: 5, title: "Wheel" },
];
---

<div class="py-20 px-16 flex flex-col gap-6 justify-center items-center">
  <p class="text-lg font-bold">We work on</p>
  <p class="text-[32px] font-bold">All Makes & Models</p>
  <div class="flex flex-col gap-6">
    <div class="hidden md:flex gap-12 justify-center">
      {
        firstRowLogos.map((logo) => (
          <div>
            <Image
              src={`/logo/logo${logo.id}.svg`}
              alt="hogehuga"
              width={100}
              height={100}
            />
          </div>
        ))
      }
    </div>
    <div class="flex flex-col sm:flex-row gap-12 justify-center items-center">
      {
        secondRowLogos.map((logo) => (
          <div>
            <Image
              src={`/logo/logo${logo.id}.svg`}
              alt="hogehuga"
              width={100}
              height={100}
            />
          </div>
        ))
      }
    </div>
    <div class="block sm:hidden gap-12 justify-center">
      <button class="border border-black py-3 px-6 w-96 max-w-100">
        View more
      </button>
    </div>
  </div>
</div>

<div class="section-gray">
  <div
    class="section-container flex flex-col gap-20 justify-center items-center"
  >
    <div class="flex flex-col gap-4 hoge">
      <h2>Our Services</h2>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
    </div>
    <div class="flex flex-wrap gap-8">
      {
        firstRowServices.map((service) => (
          <ServiceImage id={service.id} title={service.title} />
        ))
      }
    </div>
    <div class="flex flex-wrap gap-8">
      {
        secondRowServices.map((service) => (
          <ServiceImage id={service.id} title={service.title} />
        ))
      }
    </div>
  </div>
  <div class="section-gray">
    <div
      class="section-container flex flex-col gap-20 justify-center items-center"
    >
      <div class="flex flex-col gap-4 hoge">
        <h2>Customer testimonials</h2>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
      </div>
      <Carousel client:load />
    </div>
  </div>
</div>
