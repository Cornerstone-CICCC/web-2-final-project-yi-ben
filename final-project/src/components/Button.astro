---
interface Props {
  text?: string;
  width?: string;
  textColor?: string;
  bgColor?: string;
  borderColor?: string;
}

const {
  text = "View more",
  width = "w-96",
  textColor = "text-black",
  bgColor = "bg-white",
  borderColor = "border-black",
} = Astro.props;

const hoverBgColor = textColor === "text-white" ? "bg-white" : "bg-black";
const hoverTextColor = textColor === "text-white" ? "text-black" : "text-white";
---

<button
  class={`border ${width} ${textColor} ${bgColor} ${borderColor} hover:${hoverBgColor} hover:${hoverTextColor} transition-all duration-300 py-3 px-6 max-w-full rounded`}
>
  {text}
</button>
